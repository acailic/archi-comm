# /.npmrc
# npm configuration for ArchiComm project

# Save exact versions in package.json (no ^ or ~)
save-exact=true

# Always generate package-lock.json
package-lock=true

# Enforce Node version from package.json
engine-strict=true

# Use strict peer dependency resolution
legacy-peer-deps=false

# Set audit level for security checks
audit-level=moderate

# Disable funding messages during install
fund=false

# Disable progress bar in CI environments
progress=false
