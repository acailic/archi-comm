{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": "..",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@packages/*": [
        "src/packages/*"
      ],
      "@core": [
        "src/packages/core/index.ts"
      ],
      "@core/*": [
        "src/packages/core/*"
      ],
      "@ui": [
        "src/packages/ui/index.ts"
      ],
      "@ui/*": [
        "src/packages/ui/*"
      ],
      "@canvas": [
        "src/packages/canvas/index.ts"
      ],
      "@canvas/*": [
        "src/packages/canvas/*"
      ],
      "@audio": [
        "src/packages/audio/index.ts"
      ],
      "@audio/*": [
        "src/packages/audio/*"
      ],
      "@services": [
        "src/packages/services/index.ts"
      ],
      "@services/*": [
        "src/packages/services/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@hooks/*": [
        "src/shared/hooks/*"
      ]
    }
  },
  "include": [
    "../src/**/*",
    "../src/types/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../src-tauri",
    "../test-results"
  ]
}
